---
title: Themes
---
<section class="slant-section" style="margin-bottom:15px;">
<h1>Themes</h1>
</section>
<div style="text-align:center;">
<div style="display:inline-block;text-align:left;">
<% site.themes.forEach((theme) => { %>
  <div class="card" style="width: 18rem;">
  <img class="card-img-top" src="<%= theme.image %>" alt="Screenshot of <%= theme.name %> theme">
  <div class="card-body">
    <h5 class="card-title"><%= theme.name %></h5>
    <h6 class="card-subtitle mb-2 text-muted">By <%= theme.author %></h6>
    <p class="card-text"><%= theme.description %></p>
<button type="button" class="btn primary" data-toggle="modal" data-target="#<%= theme.name %>">
  See More
</button>
  </div>
  </div>
<% }) %>
</div>
</div>

<% site.themes.forEach((theme) => { %>
<div class="modal fade" id="<%= theme.name %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"><%= theme.name %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      <h6 class="mb-2 text-muted">By <%= theme.author %></h6>
      <p><%= theme.description %></p>
<a href="https://app.netlify.com/start/deploy?repository=https://github.com/<%= theme.repo %>">
  <img src="https://www.netlify.com/img/deploy/button.svg" title="Deploy to Netlify">
</a><a href="https://github.com/<%= theme.repo %>/archive/master.zip" class="btn primary">Download</a>
<img style="float:right;vertical-align:middle;" src="<%= theme.image %>" alt="Screenshot of <%= theme.name %> theme">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
<% }) %>
